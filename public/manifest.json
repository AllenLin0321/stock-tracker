{
  "manifest_version": 2,
  "name": "US Stock Tracker",
  "description": "This is an US Stock/ETF portfolio checker and rebalancing calculator APP.",
  "version": "1.5.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon48.png",
    "default_title": "US Stock Tracker"
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
